{
  "compilerOptions": {
    "target": "ES2020", // Modern JS output
    "module": "CommonJS", // Node-friendly module system
    "rootDir": "./src", // Source TS files
    "outDir": "./dist", // Compiled JS goes here
    "strict": true, // Enable all strict type checks
    "esModuleInterop": true, // Allow default imports from CommonJS
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true, // Skip type-checking node_modules
    "sourceMap": true, // Generate source maps
    "types": ["node"], // Include Node.js types
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src/**/*"]
}
